@page "/locationsoverview"

<h1 class="page-title">All Locations</h1>

@if (Locations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Locations)
            {
                    <tr>
                        <td>@location.OccupantName</td>
                        <td>@location.Address.AddressLine1</td>
                        <td>@location.Address.Locality</td>
                        <td>@location.Address.AdministrativeArea</td>
                        <td>@location.Address.PostalCode</td>
                        <td>
                            <a href="@($"locationdetail/{location.Id}")" class="btn btn-primary">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
}